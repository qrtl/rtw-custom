<odoo>
    <data>
        <record id="view_partner_dm_list" model="ir.ui.view">
            <field name="name">crm partner list</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id"/>
                    <field name="user_id"/>
                    <field name="in_has"/>
                    <field name="zip"/>
                    <field name="state_id"/>
                    <field name="city"/>
                    <field name="street"/>
                    <field name="street2"/>
                    <field name="phone"/>
                    <field name="fax"/>
                    <field name="parent_id"/>
                    <field name="department"/>
                    <field name="title"/>
                    <field name="calender"/>
                    <field name="ny_card"/>
                </tree>
            </field>
        </record>

        <record id="action_partner_dm_tree" model="ir.actions.act_window">
            <field name="name">送付リスト</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_id" ref="view_partner_dm_list"/>
            <field name="domain">[
                ("is_company","=",False),
                ("parent_id","not ilike",("閉鎖","倒産","不明","不達","移転","個人")),
                ("last_name","not ilike",("退職","転勤","異動","育休","産休","不明")),
                ]
            </field>
<!--            <field name="context">{"search_default_event_year":1,"search_default_is_showroom":1}</field>-->
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                name="レポート"
                id="menu_partner_report"
                parent="contacts.menu_contacts"
                sequence="10"
        />
        <menuitem
                id="menu_partner_dm"
                action="action_partner_dm_tree"
                parent="menu_partner_report"
                sequence="10"
        />
    </data>
</odoo>